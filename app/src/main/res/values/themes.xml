<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Bloodbond" parent="android:Theme.Material.Light.NoActionBar">

        <item name="android:windowBackground">@color/white</item>
    </style>


    <style name="Theme.Bloodbond.splash" parent="Theme.SplashScreen">


        <item name="android:windowFullscreen">true</item>


        <item name="windowSplashScreenBackground">#FF1D1A</item>


        <item name="windowSplashScreenAnimatedIcon">@drawable/bb</item>


        <item name="windowSplashScreenAnimationDuration">300</item>


        <item name="postSplashScreenTheme">@style/Theme.Bloodbond</item>


        <item name="windowSplashScreenIconBackgroundColor">@color/white</item>


    </style>


</resources>